{
  "name": "@crm/notifications",
  "version": "0.1.0",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "start": "pnpm run start:api",
    "start:api": "node dist/main.js",
    "prestart:api": "pnpm run build",
    "start:api:dev": "nest start --watch",
    "start:prod": "pnpm run start:api",
    "start:dev": "pnpm run start:api:dev",
    "start:workers": "node dist/worker.js",
    "prestart:workers": "pnpm run build:workers",
    "start:workers:dev": "nest start workers --watch",
    "build": "nest build",
    "build:workers": "nest build workers",
    "build:all": "pnpm run build && pnpm run build:workers",
    "typeorm": "typeorm-ts-node-commonjs --dataSource typeorm.config.ts",
    "migrations:run": "pnpm run typeorm migration:run",
    "migrations:revert": "pnpm run typeorm migration:revert",
    "migrations:generate": "pnpm run typeorm migration:generate -d typeorm.config.ts",
    "test": "pnpm exec jest",
    "test:watch": "pnpm exec jest --watch"
  },
  "dependencies": {
    "@golevelup/nestjs-rabbitmq": "5.7.0",
    "@liaoliaots/nestjs-redis": "^10.0.0",
    "@nestjs/common": "^10.0.0",
    "@nestjs/config": "^3.0.0",
    "@nestjs/core": "^10.0.0",
    "@nestjs/platform-express": "^10.0.0",
    "@nestjs/typeorm": "^10.0.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "joi": "^17.10.0",
    "pg": "^8.11.0",
    "reflect-metadata": "^0.2.0",
    "rxjs": "^7.8.0",
    "typeorm": "^0.3.20",
    "dotenv": "^16.3.1"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.3.0",
    "@nestjs/schematics": "^10.0.0",
    "@nestjs/testing": "^10.4.0",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.0.0",
    "@types/supertest": "^2.0.16",
    "jest": "^29.7.0",
    "pg-mem": "^3.0.5",
    "supertest": "^6.3.4",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.3.0",
    "typeorm-ts-node-commonjs": "0.3.20"
  }
}
